{
  "interfaces": {
    "hotkey": {
      "enabled": true,
      "key": "ctrl+alt+v",
      "toggle_shortcuts_key": "ctrl+alt+s"
    },
    "tray": {
      "enabled": false
    },
    "widget": {
      "enabled": true,
      "position": {
        "x": 100,
        "y": 100
      },
      "size": {
        "width": 180,
        "height": 90
      },
      "always_on_top": true,
      "show_shortcuts": true,
      "shortcuts_position": "attached"
    },
    "hardware": {
      "enabled": false,
      "device": null,
      "device_type": "usb"
    }
  },
  "voice": {
    "language": "en",
    "auto_space": true
  },
  "audio_feedback": false,
  "activation_modes": {
    "voice_only": false,
    "shortcuts_only": false,
    "both": true
  },
  "shortcuts": {
    "config_file": "config/shortcuts_config.yaml",
    "enable_context_detection": true,
    "auto_hide_when_inactive": false
  }
}
